let string1 = "3 2/8";
let string2 = "5 4/6";

function stringzumarray(string)
{
    let array1 = string.split(" ");
    let array2 = array1[1].split("/");
    let arraygelöst = [Number(array1[0]) , Number(array2[0]) , Number(array2[1])];
    console.log(arraygelöst);
    return arraygelöst;
}
    
function brücheaddieren(array1a, array2b)
{
    let ganzzahl = array1a[0] + array2b[0];
    let gmsnenner = array1a[2] * array2b[2];
    let gmszähler = array1a[1]*array2b[2] + array2b[1]*array1a[2];

    if(gmszähler >= gmsnenner)
    {
        let ganzzahldazu = gmszähler / gmsnenner;
        let ganzzahldazuganz = Math.floor(ganzzahldazu);
        ganzzahl = ganzzahl + ganzzahldazuganz;
        gmszähler = gmszähler - ganzzahldazuganz * gmsnenner;
    }
    
    for(let i = gmsnenner; i > 0; i--)
    {
        if(gmszähler % i == 0 && gmsnenner % i == 0)
        {
            gmszähler = gmszähler / i;
            gmsnenner = gmsnenner / i;
            break;
        }
    }
    let gmsbruch = `${ganzzahl} ${gmszähler}/${gmsnenner}`;
    console.log(gmsbruch);
    return gmsbruch;
}

let array1 = stringzumarray(string1);
let array2 = stringzumarray(string2);
brücheaddieren(array1, array2);